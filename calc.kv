#:kivy 1.0.9

<CalcBox>:
    #=======
    display: display
    btn_1: btn_1
    btn_2: btn_2
    btn_3: btn_3
    btn_4: btn_4
    btn_5: btn_5
    btn_6: btn_6
    btn_7: btn_7
    btn_8: btn_8
    btn_9: btn_9
    btn_10: btn_10
    btn_11: btn_11
    btn_12: btn_12
    btn_13: btn_13
    btn_14: btn_14
    btn_15: btn_15
    btn_16: btn_16
    btn_17: btn_17
    btn_18: btn_18
    btn_19: btn_19
    #=======
    orientation: 'vertical'
    Label:
        font_name: 'americorps'
        font_size: self.height / 3
        id: display
        background_color: 1, 0, 0, .7
        color: 0, 0, 0, .3
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                pos: self.pos
                size: self.size
    Widget:
        id: d1
    Widget:
        GridLayout:
            height: self.parent.height + d1.height
            width: self.parent.width
            cols: 4
            rows: 5
            Button:
                font_name: 'americorps'
                font_size: self.height / 1.4
                id: btn_1
                text: 'C'
                background_normal: 'off'
                background_down: 'off'
                background_color: 1, 0, 0, 1
                color: 0, 0, 0, .3
                on_press: display.text = ''
                on_press: root.btn_1.background_color[3] = .7
                on_release: root.btn_1.background_color[3] = 1
            Button:
                font_name: 'americorps'
                font_size: self.height / 1.4
                id: btn_2
                background_normal: 'off'
                background_down: 'off'
                background_color: 1, .1, 0, 1
                color: 0, 0, 0, .3
                text: 'V'
                on_press: root.btn_2.background_color[3] = .7
                on_release: root.btn_2.background_color[3] = 1
            Button:
                font_name: 'americorps'
                font_size: self.height / 1.4
                id: btn_3
                text: '%'
                background_normal: 'off'
                background_down: 'off'
                background_color: 1, .2, 0, 1
                color: 0, 0, 0, .3
                on_press: root.btn_3.background_color[3] = .7
                on_release: root.btn_3.background_color[3] = 1
            Button:
                font_name: 'americorps'
                font_size: self.height / 1.4
                id: btn_4
                text: '/'
                background_normal: 'off'
                background_down: 'off'
                background_color: 1, .3, 0, 1
                color: 0, 0, 0, .3
                on_press: root.div_click()
                on_press: root.btn_4.background_color[3] = .7
                on_release: root.btn_4.background_color[3] = 1
            Button:
                font_name: 'americorps'
                font_size: self.height / 1.4
                id: btn_5
                text: '7'
                background_normal: 'off'
                background_down: 'off'
                background_color: 1, .1, 0, 1
                color: 0, 0, 0, .3
                on_press: display.text += '7'
                on_press: root.btn_5.background_color[3] = .7
                on_release: root.btn_5.background_color[3] = 1
            Button:
                font_name: 'americorps'
                font_size: self.height / 1.4
                id: btn_6
                text: '8'
                background_normal: 'off'
                background_down: 'off'
                background_color: 1, .2, 0, 1
                color: 0, 0, 0, .3
                on_press: display.text += '8'
                on_press: root.btn_6.background_color[3] = .7
                on_release: root.btn_6.background_color[3] = 1
            Button:
                font_name: 'americorps'
                font_size: self.height / 1.4
                id: btn_7
                text: '9'
                background_normal: 'off'
                background_down: 'off'
                background_color: 1, .3, 0, 1
                color: 0, 0, 0, .3
                on_press: display.text += '9'
                on_press: root.btn_7.background_color[3] = .7
                on_release: root.btn_7.background_color[3] = 1
            Button:
                font_name: 'americorps'
                font_size: self.height / 1.4
                id: btn_8
                text: 'X'
                background_normal: 'off'
                background_down: 'off'
                background_color: 1, .4, 0, 1
                color: 0, 0, 0, .3
                on_press: root.mult_click()
                on_press: root.btn_8.background_color[3] = .7
                on_release: root.btn_8.background_color[3] = 1
            Button:
                font_name: 'americorps'
                font_size: self.height / 1.4
                id: btn_9
                text: '4'
                background_normal: 'off'
                background_down: 'off'
                background_color: 1, .2, 0, 1
                color: 0, 0, 0, .3
                on_press: display.text += '4'
                on_press: root.btn_9.background_color[3] = .7
                on_release: root.btn_9.background_color[3] = 1
            Button:
                font_name: 'americorps'
                font_size: self.height / 1.4
                id: btn_10
                text: '5'
                background_normal: 'off'
                background_down: 'off'
                background_color: 1, .3, 0, 1
                color: 0, 0, 0, .3
                on_press: display.text += '5'
                on_press: root.btn_10.background_color[3] = .7
                on_release: root.btn_10.background_color[3] = 1
            Button:
                font_name: 'americorps'
                font_size: self.height / 1.4
                id: btn_11
                text: '6'
                background_normal: 'off'
                background_down: 'off'
                background_color: 1, .4, 0, 1
                color: 0, 0, 0, .3
                on_press: display.text += '6'
                on_press: root.btn_11.background_color[3] = .7
                on_release: root.btn_11.background_color[3] = 1
            Button:
                font_name: 'americorps'
                font_size: self.height / 1.4
                id: btn_12
                text: '-'
                background_normal: 'off'
                background_down: 'off'
                background_color: 1, .5, 0, 1
                color: 0, 0, 0, .3
                on_press: root.minus_click()
                on_press: root.btn_12.background_color[3] = .7
                on_release: root.btn_12.background_color[3] = 1
            Button:
                font_name: 'americorps'
                font_size: self.height / 1.4
                id: btn_13
                text: '1'
                background_normal: 'off'
                background_down: 'off'
                background_color: 1, .3, 0, 1
                color: 0, 0, 0, .3
                on_press: display.text += '1'
                on_press: root.btn_13.background_color[3] = .7
                on_release: root.btn_13.background_color[3] = 1
            Button:
                font_name: 'americorps'
                font_size: self.height / 1.4
                id: btn_14
                text: '2'
                background_normal: 'off'
                background_down: 'off'
                background_color: 1, .4, 0, 1
                color: 0, 0, 0, .3
                on_press: display.text += '2'
                on_press: root.btn_14.background_color[3] = .7
                on_release: root.btn_14.background_color[3] = 1
            Button:
                font_name: 'americorps'
                font_size: self.height / 1.4
                id: btn_15
                text: '3'
                background_normal: 'off'
                background_down: 'off'
                background_color: 1, .5, 0, 1
                color: 0, 0, 0, .3
                on_press: display.text += '3'
                on_press: root.btn_15.background_color[3] = .7
                on_release: root.btn_15.background_color[3] = 1
            Widget:
                Button:
                    font_name: 'americorps'
                    font_size: self.height
                    id: btn_16
                    background_normal: 'off'
                    background_down: 'off'
                    background_color: 1, .6, 0, 1
                    color: 0, 0, 0, .3
                    text: '+'
                    y: b20.y
                    x: self.parent.x
                    height: self.parent.height + b20.height
                    width: self.parent.width
                    on_press: root.plus_click()
                    on_press: root.btn_16.background_color[3] = .7
                    on_release: root.btn_16.background_color[3] = 1
            Button:
                font_name: 'americorps'
                font_size: self.height / 1.4
                id: btn_17
                text: '0'
                background_normal: 'off'
                background_down: 'off'
                background_color: 1, .4, 0, 1
                color: 0, 0, 0, .3
                on_press: display.text += '0'
                on_press: root.btn_17.background_color[3] = .7
                on_release: root.btn_17.background_color[3] = 1
            Button:
                font_name: 'americorps'
                font_size: self.height / 1.4
                id: btn_18
                text: '.'
                background_normal: 'off'
                background_down: 'off'
                background_color: 1, .5, 0, 1
                color: 0, 0, 0, .3
                on_press: root.dot_click()
                on_press: root.btn_18.background_color[3] = .7
                on_release: root.btn_18.background_color[3] = 1
            Button:
                font_size: self.height / 1.4
                id: btn_19
                text: '='
                background_normal: 'off'
                background_down: 'off'
                background_color: 1, .6, 0, 1
                color: 0, 0, 0, .3
                on_press: root.equal()
                on_press: root.btn_19.background_color[3] = .7
                on_release: root.btn_19.background_color[3] = 1
            Widget:
                id: b20
